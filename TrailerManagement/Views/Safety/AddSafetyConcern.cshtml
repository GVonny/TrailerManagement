
@{
    ViewBag.Title = "AddSafetyConcern";
}

<h2>Add Safety Concern</h2>

<div class="well">
    @using (Html.BeginForm("CreateSafetyConcern", "Safety", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-xs-2">
                <strong class="float-right" style="margin-top:5px; margin-right:-10px;">Area:</strong>
            </div>
            <div class="col-xs-5">
                <input type="text" id="area" name="area" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2">
                <strong class="float-right" style="margin-top:5px; margin-right:-10px;">Condition Noted:</strong>
            </div>
            <div class="col-xs-5">
                <input type="text" id="conditionNoted" name="conditionNoted" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2">
                <strong class="float-right" style="margin-top:5px; margin-right:-10px;">Codes Violated:</strong>
            </div>
            <div class="col-xs-5">
                @Html.DropDownList("codeTypes", null, "- - - Select Code 1 - - -", htmlAttributes: new { @class = "form-control signin-form", id = "code1" })
            </div>
            <br />
            <br />
            <div class="col-xs-offset-2 col-xs-5">
                @Html.DropDownList("codeTypes2", null, "- - - Select Code 2 - - -", htmlAttributes: new { @class = "form-control signin-form", id = "code2" })
            </div>
            <br />
            <br />
            <div class="col-xs-offset-2 col-xs-5">
                @Html.DropDownList("codeTypes3", null, "- - - Select Code 3 - - -", htmlAttributes: new { @class = "form-control signin-form", id = "code3" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2">
                <strong class="float-right" style="margin-top:5px; margin-right:-10px;">Corrective Action:</strong>
            </div>
            <div class="col-xs-5">
                <input type="text" id="correctiveAction" name="correctiveAction" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2">
                <strong class="float-right" style="margin-right:-10px;">Image Upload:</strong>
            </div>
            <div class="col-xs-5">
                <input type="file" name="ImageFile" id="ImageFile">
            </div>
        </div>

        <input type="submit" id="submit" class="col-xs-offset-2 btn btn-primary" />
        <a href="SafetyAudit" class="btn btn-warning">Cancel</a>
    </div>
    }
</div>