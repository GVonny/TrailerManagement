@using TrailerManagement.Models;
@{
    ViewBag.Title = "MyConcerns";
}

<h2 class="float-left">My Concerns</h2>
<a href="/Trailer/CreateDriverConcern" class="btn btn-primary float-left" style="margin-top:20px;">Add Concern</a>

<table class="table table-responsive" id="concerns">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Notes</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach(DriverConcern concern in Model)
        {
            <tr id="@concern.DriverConcernGUID">
                <td>@concern.Customer</td>
                <td>@concern.Notes</td>
                <td>@concern.DateTaken</td>
                <td class="col-xs-1"><a href="/Trailer/DriverConcern?driverConcernID=@concern.DriverConcernGUID" class="btn btn-primary">View</a></td>
            </tr>
        }
    </tbody>
</table>
