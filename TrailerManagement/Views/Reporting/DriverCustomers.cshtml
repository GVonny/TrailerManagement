@using TrailerManagement.Models;
@{
    ViewBag.Title = "Driver Customers";
}

<h2>Driver Customers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Notes</th>
            <th>Date</th>
            <th>Taken By</th>
        </tr>
    </thead>
    <tbody>
        @foreach(DriverConcern concern in Model)
        {
            <tr>
                <td>@concern.Customer</td>
                <td>@concern.Notes</td>
                <td>@concern.DateTaken</td>
                <td>@concern.DriverSignedIn</td>
                <td class="col-xs-1"><a href="/Reporting/CustomerInfo?driverConcernID=@concern.DriverConcernGUID" class="btn btn-primary">View</a></td>
            </tr>
        }
    </tbody>
</table>