@model TrailerManagement.Models.CreateUser
@{
    ViewBag.Title = "Create User";
}

<h2>Create User</h2>

<div class="well">
    <form method="post" class="form-horizontal">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            <!-- Username -->
            <div class="form-group">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Username", id = "username" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <!-- Password -->
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password", id = "password" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <!-- FirstName -->
            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Account Name", id = "firstName" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <!-- Department -->
            <div class="form-group">
                @Html.LabelFor(model => model.Department, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.Department, ViewData["departments"] as List<SelectListItem>, "- - - Please Select - - -", htmlAttributes: new { @class = "form-control signin-form"})
                    @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Permission -->
            <div class="form-group">
                @Html.LabelFor(model => model.Permission, "Permission", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.DropDownList("Permission", new List<SelectListItem>
                    {
                       new SelectListItem { Text = "Employee", Value = "10" },
                       new SelectListItem { Text = "Driver", Value = "20"},
                       new SelectListItem { Text = "Edit", Value = "30" },
                       new SelectListItem { Text = "Admin", Value = "40" },
                    }, htmlAttributes: new { @class = "form-control signin-form" })
                </div>
            </div>
            <!-- Submit -->
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="save" value="Create" class="btn btn-primary" />
                    <a href="~/Home/Index" class="btn btn-warning">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <h3>Permission Levels</h3>
    <div class="row">
        <div class="col-xs-3">
            <h4>Admin</h4>
            <ul>
                <li>Create Users</li>
                <li>Modify Users</li>
                <li>Create Trailers</li>
                <li>Modify Trailers</li>
                <ul>
                    <li>Active</li>
                    <li>Master</li>
                    <li>Inactive</li>
                </ul>
                <li>Add Trailers to Active</li>
                <li>Remove Trailers from Active</li>
                <li>Move Trailers to Inactive</li>
                <li>Modify Account Info</li>
            </ul>
        </div>
        <div class="col-xs-3">
            <h4>Edit</h4>
            <ul>
                <li>Modify Trailers</li>
                <ul>
                    <li>Active</li>
                    <li>Master</li>
                    <li>Inactive</li>
                </ul>
                <li>Modify Account Info</li>
            </ul>
        </div>
        <div class="col-xs-3">
            <h4>Driver</h4>
            <ul>
                <li>Modify Trailers</li>
                <ul>
                    <li>Active</li>
                </ul>
                <li>Modify Account Info</li>
            </ul>
        </div>
        <div class="col-xs-3">
            <h4>Employee</h4>
            <ul>
                <li>View Active Trailer List</li>
            </ul>
        </div>
    </div>
</div>
